<div class="container-fluid">
  <%= render partial: "layouts/categories_banner" %>

  <div>
    <h1 class="big-font centered-title">ALL</h1>
  </div>

  <div class="cards">
    <% @products.each do |product| %>
      <div class="index-card">
        <%# <%= image_tag product.photo, :class => "img-style pb-4" %>
        <%= image_tag "gucci-card.jpg", :class => "img-product pb-3" %>
        <p class="bold-medium-font mb-2"><%=link_to product.brand, product_path(product)%></p>
        <p class="small-font"><%=link_to product.name, product_path(product)%></p>
      </div>
    <% end %>
</div>
