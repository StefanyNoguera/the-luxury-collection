<h1>New Review</h1>

<%= form_with(model: [@product, @review], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5, class: "form-control", required: true %>
    <p class="text-muted">Rating should be between 1 and 5.</p>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: "form-control", required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", product_path(@product) %>
